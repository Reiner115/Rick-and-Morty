@{
    ViewData["Title"] = "Home Page";
}

<div class="slider m-4 shadow"></div>

<h3 class="text-center font-weight-bold ">Welcome to the world of Rick and Morty!</h3>
<div class="paragraphs">
    <div class="row justify-content-center m-0 gap-5 mt-5">
        <p class="text-lg-center font-md col-md-4 col-sm-10 flex-column justify-content-center text-center">
            Embark on a mind-bending adventure across infinite dimensions as you explore the quirks and chaos of this beloved animated series. Join the eccentric genius scientist Rick Sanchez and his fretful grandson Morty Smith on their intergalactic escapades filled with humor, satire, and existential ponderings
        </p>
        <img src="~/images/rick-and-morty-run-the-jewels-bg.jpg" alt="" class="col-md-4 split-image">
    </div>
    <div class="row justify-content-center m-0 gap-5 mt-5">

        <img src="~/images/1300399.jpg" alt="" class="col-md-4 split-image">

        <p class="text-lg-center font-md col-md-4 col-sm-10 d-flex flex-column justify-content-center text-center">
            grab your portal gun, buckle up, and get ready for a wild ride through space and time. Whether you're a die-hard fan or a curious newcomer, there's something here for everyone. Let's explore the infinite possibilities together!
        </p>

    </div>
</div>


<section class="characters-section  mt-5">
    <a href="/Characters">
    <h4 class="ms-5" >Characters</h4>
    <div class="characters m-0 p-5 pt-3 row row-cols-md-6 row-cols-sm-3 gap-3 justify-content-center">



        @for (int i = 0; i < 5; i++)
        {
            <div class="character  justify-content-center align-items-center shadow rounded p-4 d-flex flex-column  justify-content-between ">
                <img src="@ViewBag.Characters[i].Image" class="img img-fluid rounded" alt="">
                <div class="font-md text-center">@ViewBag.Characters[i].Name</div>
            </div>

        }
        

    </div>
    </a>
</section>




<section class="episodes-section mt-5">
    <a href="/Episodes">
    <h4 class="ms-5">Episodes</h4>
    <div class="episodes m-0 p-5 pt-3 row row-cols-md-6 row-cols-sm-3  gap-3  justify-content-center">


       
        @for (int i = 0; i < 5; i++)
        {
            <div  class="character  justify-content-center align-items-center shadow rounded p-4 d-flex flex-column  justify-content-between ">
                <img src="/images/poster-1.jpg" class="img img-fluid rounded" alt=""/>
                <div class="font-md text-center">Episode @(i+1)</div>
            </div>
        }

    </div>
    </a>
</section>
