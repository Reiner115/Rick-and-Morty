


<section class="container p-2">
    <h2 class="text-center m-5">Rick And Morty Characters</h2>
    <div class="row gap-5">
       
        @for (int i = 0; i < ViewBag.Characters.Count; i++)
        {
            
            Character character = ViewBag.Characters[i];
            
            <div class="card d-flex flex-row col-md-6 p-0">
                <img class="card-image" src="@character.Image" alt="Card image">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h4 class="card-title">@character.Name</h4>
                    @if (@character.Status.Equals("Alive"))
                    {
                        <h6> <span class="alive"></span> Alive - @character.Species</h6>
                    }
                    else
                    {
                        <h6> <span class="dead"></span> Dead -  @character.Species</h6>
                    }


                    <div class="text text-secondary fs-6">Last known location:</div>
                    <div class="fs-5">@character.Location.Name</div>

                    <div class="text text-secondary fs-6">Origin:</div>
                    <div class="fs-5">@character.Origin.Name</div>


                   
                </div>
            </div>
        }

    </div>

</section>

