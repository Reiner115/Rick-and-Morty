<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rick And Morty</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Rick_And_Morty.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light text-sm-center shadow">
            <div class="container-fluid">
                <img src="~/images/logo.jpg" class="logo text-center" alt="">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex justify-content-center align-items-center">
                        <li class="nav-item  rounded link d-flex justify-content-center align-items-center">
                            <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item rounded link d-flex justify-content-center align-items-center">
                            <a class="nav-link active"  href="@Url.Action("Index", "Characters")">Characters</a>
                        </li>
                        <li class="nav-item  rounded link d-flex justify-content-center align-items-center">
                            <a class="nav-link active" href="@Url.Action("Index", "Episodes")">Episodes</a>
                        </li>
                        <li class="nav-item rounded link d-flex justify-content-center align-items-center">
                            <a  href="@Url.Action("Index", "About")">About</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="py-3 my-4">
        <ul class="nav justify-content-center border-bottom pb-3 mb-3">
            <li class="nav-item"><a href="/" class="nav-link px-2 text-muted">Home</a></li>

            <li class="nav-item"><a href="/Characters" class="nav-link px-2 text-muted">Characters</a></li>
            <li class="nav-item"><a href="/Episodes" class="nav-link px-2 text-muted">Eposides</a></li>
            <li class="nav-item"><a href="/About" class="nav-link px-2 text-muted">About</a></li>
        </ul>
        <p class="text-center text-muted">© 2024 Mohamed Adam, Inc</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
